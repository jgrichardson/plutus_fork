
<center>
  <h1>General Ledger (Accounts)</h1>
  <br>
</center>

<%= search_form_for @q do |f| %>
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>
  <%= f.submit %>
<% end %>

<%# <%= render "form", account: Plutus::Account.new %>

<div id="accounts">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Entity</th>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
        <th scope="col">Credit Balance</th>
        <th scope="col">Debit Balance</th>
        <th scope="col">Balance</td>
        <th scope="col">Actions</td>
      </tr>
    </thead>
    <tbody>
      <% @accounts.each do |account| %>
        <tr scope="row">
          <td style="width: 20%">
            <%= account.entity.name %>
          </td>
          <td style="width: 20%">
            <%= account.name %>
          </td>
          <td style="width: 10">
            <%= account.account_type.sub('Plutus::','') %>
          </td>
          <td style="width: 10%">
            <%= account.credits_balance.round(2) %>
          </td>
          <td style="width: 10%">
            <%= account.debits_balance.round(2) %>
          </td>
          <td style="width: 10%">
            <%= account.balance.round(2) %>
          </td>
          <td style="width: 250">
          
            <%= button_to "Edit", edit_account_path(account), method: :get %>
            <%= button_to 'Delete', account_path(account), method: :delete %>

        </td>
        </tr>
      <% end %>
    </tbody>
  </table>


<p>
  <%= link_to "New account", new_account_path, class: "btn btn-primary", data: { turbo_frame: "remote_modal" }%>
</p>
